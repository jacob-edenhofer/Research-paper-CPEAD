# bind together
together <- ggarrange(p1, p2, p3, p4, ncol = 2, nrow = 2, 
                      legend = "bottom", common.legend = TRUE)
together + 
  plot_annotation(title = "V-Dem indicators for post-communist Visegr\u00E1d countries, 1990-2023",
